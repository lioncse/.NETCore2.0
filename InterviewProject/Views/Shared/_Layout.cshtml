<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | InterviewProject</title>

    <environment include="Development">
        <link href="~/AgentProfile/css/jquery.formstyler.css" rel="stylesheet" />
        <link href="~/AgentProfile/css/normalize.css" rel="stylesheet" />
        <link href="~/AgentProfile/css/style.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">

    </environment>
</head>
<body>

    <!--==============================Header=================================-->
    <header id="header" class="c-header c-header--white h-clearfix">
        <div class="l-row l-row--logo">
            @Html.Partial("_HeaderLogo")
            <div class="c-header__login">
                @Html.Partial("_Login")
            </div>
            <div class="c-header__nav">
                <ul class="h-clearfix">
                    @await Component.InvokeAsync("TopMenuComponent")
                </ul>
            </div>
        </div>
    </header>
    @Html.Partial("_NavToggole")
    <!--==============================Content================================-->
    <div id="content" class="c-content">
        @RenderBody()
    </div>
    <!--==============================Footer=================================-->
    @Html.Partial("_Footer")


    <!--======================== Mobile Navigation ==================================-->
    <div class="c-mobile-wrap">
        <div class="c-mobile-wrap__logo">
            <a href="index.html">
                <span class="c-mobile-wrap__logo-icon"></span>
            </a>
        </div>
        <div class="c-mobile-wrap__nav">
            <ul>
                <li class="has-dropdown form-toggle">
                    <span class="has-dropdown__title">My account</span>
                    <ul class="l-dropdown--mobile">
                        @Html.Partial("_LoginSetting")
                    </ul>
                </li>
                @await Component.InvokeAsync("TopMenuMobile")
            </ul>
        </div>
    </div>
    <!--======================== Mobile Forms ================================-->
    <div class="c-mobile-form-wrap">
        <span class="c-mobile-form__close l-close-btn"></span>
        <div class="c-mobile-form-wrap__inner">
            <form class="l-form l-login-form l-login-form--mobile">
                <div class="l-form__holder">
                    <h3>Sign in</h3>
                    <div class="l-form__inner">
                        <div class="l-form-row">
                            <div class="l-form-group">
                                <input type="email" class="l-form-control" id="inputEmail" required>
                                <label for="inputEmail" class="l-form-label">email</label>
                                <span class="l-form-control-focus"></span>
                            </div>
                        </div>
                        <div class="l-form-row">
                            <div class="l-form-group">
                                <input type="password" class="l-form-control" id="inputPassword" required>
                                <label for="inputPassword" class="l-form-label">password</label>
                                <span class="l-form-control-focus"></span>
                                <a href="#" class="l-form-link">Forgot Password?</a>
                            </div>
                        </div>
                        <div class="l-form-row l-form-row--submit l-row--center">
                            <button type="submit" class="l-btn l-btn-primary">Sign in</button>
                            <div class="l-form-text">
                                <a href="#" class="l-form-link">Create an Account</a>
                            </div>
                        </div>
                        <div class="l-form-row l-form-row--login-social">
                            <div class="l-divider l-divider--form l-divider--light"><span>or</span></div>
                            <div class="l-form-buttons">
                                <button type="button" class="l-btn l-btn-login l-btn-login--facebook">Sign in with Facebook</button>
                                <button type="button" class="l-btn l-btn-login l-btn-login--google">Sign in with Google</button>
                                <button type="button" class="l-btn l-btn-login l-btn-login--microsoft">Sign in with Microsoft</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <environment include="Development">
        <script src="~/AgentProfile/js/jquery-1.12.3.min.js"></script>
        <script src="~/AgentProfile/js/jquery.formstyler.min.js"></script>
        <script src="~/AgentProfile/js/ie10-viewport-bug-workaround.js"></script>
        <script src="~/AgentProfile/js/custom.js"></script>
    </environment>
    <environment exclude="Development">

    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
