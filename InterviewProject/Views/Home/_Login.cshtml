@model Login
@{
    ViewData["Title"] = "_Login";
}

    <div class="c-header__login-toggle h-clearfix">
        <div class="c-header__login-icon">
            <div class="c-header__login-avatar">
                <img src="images/agent1.png" alt="">
                <span class="c-header__user-notices c-header__user--has-notices">1</span>
            </div>
        </div>
        <div class="c-header__login-btn">
            <span class="c-header__login-txt">Login</span>
            <span class="c-header__login-carrot"></span>
            <span class="c-header__login-close l-close-btn"></span>
        </div>
    </div>
    <div class="l-dropdown l-dropdown--login">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "l-form l-login-form" }))
        {
            <div class="l-form__holder">
                <div class="l-form__inner">
                    <div class="l-form-row">
                        <div class="l-form-group">
                            <input type="email" class="l-form-control" id="inputEmailDropdown" name="Email" required>
                            <label for="inputEmailDropdown" class="l-form-label">email</label>
                            <span class="l-form-control-focus"></span>
                            @*@Html.EditorFor(x => x.Email, new {@class= "l-form-control"})*@
                        </div>
                    </div>
                    <div class="l-form-row">
                        <div class="l-form-group">
                            <input type="password" class="l-form-control" id="inputPasswordDropdown" name="Password" required>
                            <label for="inputPasswordDropdown" class="l-form-label">password</label>
                            <span class="l-form-control-focus"></span>
                            <a href="#" class="l-form-link">Forgot Password?</a>
                        </div>
                    </div>
                    <div class="l-form-row l-form-row--submit l-row--center">
                        <button type="submit" class="l-btn l-btn-primary">Sign in</button>
                        <div class="l-form-text">
                            <a href="#" class="l-form-link">Create an Account</a>
                        </div>
                    </div>
                    <div class="l-form-row l-form-row--login-social">
                        <div class="l-divider l-divider--form l-divider--light"><span>or</span></div>
                        <div class="l-form-buttons">
                            <button type="button" class="l-btn l-btn-login l-btn-login--facebook">Sign in with Facebook</button>
                            <button type="button" class="l-btn l-btn-login l-btn-login--google">Sign in with Google</button>
                            <button type="button" class="l-btn l-btn-login l-btn-login--microsoft">Sign in with Microsoft</button>
                        </div>
                    </div>
                </div>
            </div>
        }
</div>
<ul class="l-dropdown l-dropdown--user-menu">
    @Html.Partial("_LoginSetting")
    </ul>
